{
  "manifest_version": 2,
  "name": "Youtube Playlist Statistics",
  "version": "0.0.1",
  "description": "Display statistics for Youtube Playlists",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_title": "Playlist Statistics",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src * data: 'self' 'unsafe-eval'",
  "permissions": ["tabs", "storage", "declarativeContent"]
}
